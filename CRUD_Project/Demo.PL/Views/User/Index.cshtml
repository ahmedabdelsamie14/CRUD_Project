@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="alert alert-warning"> @ViewBag.Message</div>
<h1>All Users</h1>
<br />
<br />



<br />
<div class="row justify-content-center align-items-center mt-5">

    <form asp-action="Index" class=" row col-8 offset-2">
        <div class="col-8">
            <input type="text" class="form-control" id="SearchInp" name="searchValue" placeholder="Search By Name" />

        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-outline-success" />

        </div>

    </form>
</div>

@if (Model.Count() > 0)
{
    <table class=" mt-4 table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(U=>U.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(U=>U.FName)
                </th>   
                <th>
                    @Html.DisplayNameFor(U=>U.LName)
                </th>  
                <th>
                    @Html.DisplayNameFor(U=>U.Email)
                </th>  
                <th>
                    @Html.DisplayNameFor(U=>U.PhoneNumber)
                </th> 



                <th>Details</th>
                <th>Update </th>
                <th>Delete</th>
            </tr>

        </thead>

        <tbody>

            @foreach (var User in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(M => User.Id)</td>
                    <td>@Html.DisplayFor(M => User.FName)</td>
                    <td>@Html.DisplayFor(M => User.LName)</td>
                    <td>@Html.DisplayFor(M => User.Email)</td>
                    <td>@Html.DisplayFor(M => User.PhoneNumber)</td>
                    <td>@string.Join(" " , User.Roles)</td>

                    <partial name="_ButtonsPartial" model="@User.Id">

                </tr>
            }


        </tbody>
    </table>
}

else
{
    <div class="mt-4 alert alert-warning">


        <h3>There is No Users :(</h3>
    </div>
}
